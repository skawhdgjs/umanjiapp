<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <!-- MAIN CONTENT -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
            android:id="@+id/mMapFragment"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/activity_main" />

            <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/relativeLayout8"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <ImageView
                    android:id="@+id/main_Logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/umanji_logo"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="umanji"
                    android:textColor="@color/gray_text"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@+id/searchLayout"
                    android:layout_toRightOf="@+id/main_Logo"
                    android:layout_toEndOf="@+id/main_Logo" />

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:id="@+id/searchLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/search"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/logo"
                        android:layout_toRightOf="@+id/logo"
                        android:background="@drawable/shadow"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="search"
                        android:textColor="@color/gray_text"
                        android:textSize="14dp"
                        android:visibility="visible" />

                </LinearLayout>

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그인"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/searchLayout"
                    android:layout_alignStart="@+id/searchLayout"
                    android:layout_marginLeft="213dp"
                    android:layout_marginStart="213dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/userPhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_user_person"
                    android:visibility="gone"
                    android:layout_alignTop="@+id/searchLayout"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/mNotyCount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/default_btn_red_radius"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:layout_alignTop="@+id/loginBtn"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="7dp"
                    android:layout_marginEnd="7dp"
                    />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/KeywordChannelToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#66a6ff"
                android:visibility="gone"
                android:layout_alignBottom="@+id/view2">

                <RelativeLayout
                    android:id="@+id/mainTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/keywordTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:gravity="center"
                            android:text="key"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            />

                        <TextView
                            android:id="@+id/communityText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="center"
                            android:text=" 채널"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="20dp" />

                    </LinearLayout>



                    <ImageView
                        android:id="@+id/community_close_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/close_keyword_button"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="5dp"/>

                </RelativeLayout>

            </FrameLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/ads_image"
                android:background="@color/gray_soft"
                android:id="@+id/view2" />

            <ImageView
                android:id="@+id/ads_image"
                android:layout_width="400dp"
                android:layout_height="53dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout8"
                android:scaleType="fitXY"
                android:src="@drawable/ads_umanji_guide" />

            <!--
            ***************

            ***************
            -->


            <TextView
                android:id="@+id/mZoomLevelText"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="140dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_label"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mZoomBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="94dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/zoom_btn"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/zoom_in"
                app:riv_corner_radius="5dp"
                app:riv_oval="false" />


            <ImageView
                android:id="@+id/centerCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/center_circle"
                android:layout_above="@+id/mZoomLevelText"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="62dp" />
            <Button
                android:id="@+id/toCommunityBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:background="@drawable/default_btn_radius_trans"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="단체 이동"
                android:textColor="@color/white"
                android:visibility="gone" />

            <!-- Keyword Community level 2 환경 / 에너지 -->



            <!-- Keyword Community level 8 :: 기타 여가 활동-->

            <LinearLayout
                android:id="@+id/keyword_launcher_level8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/talk"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/button_kakao_black" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/tutorialPanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/interior"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_create"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/towerCrane"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/tower_crane"
                    android:visibility="gone" />


            </RelativeLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/currentAddress"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:text="current Address"
                android:textStyle="bold"
                android:layout_below="@+id/ads_image"
                android:layout_centerHorizontal="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:background="@drawable/light_bg"/>


            <!--
            -->


        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mainListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/feed_bg"
                android:clickable="true"
                android:focusable="false"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/headerPanel"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/panel_arrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/linearLayout6"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_arrow_up" />



                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/headerPanel"
                    android:background="@color/gray_dim_soft" />

                <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false" />


            </LinearLayout>

            <!--
        community Keyword Group
        -->


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/communityListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dark_bg"
                android:clickable="true"
                android:focusable="false"
                android:orientation="vertical"
                android:visibility="visible">

                <!--<android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false" />-->


                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    style="@style/AppTheme.TabStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tabs"
                    android:background="@color/gray_dim_soft" />

                <!--app:tabMode="scrollable"-->

                <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPaper"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


                </android.support.design.widget.CoordinatorLayout>
            </LinearLayout>

        </LinearLayout>


    <include
        layout="@layout/include_notice_panel"
        android:layout_width="match_parent"
        android:layout_height="53dp" />

    <ImageView
        android:id="@+id/mGuideImageView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/guide_01"
        android:visibility="gone" />

</RelativeLayout>
