<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umanji.umanjiapp.ui.newMain.NewMainActivity">

        <RelativeLayout
            android:layout_margin="0dp"
            android:id="@+id/toolbar_newMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <ImageView
                android:id="@+id/main_Logo_newMain"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/umanji_logo"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Main Title"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/to_map_newMain"
                android:src="@drawable/ic_marker_yellow"

                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/logo_newMain"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="umanji"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/main_Logo_newMain"
                android:layout_toEndOf="@+id/main_Logo_newMain" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addressLay_newMain"
            android:layout_below="@id/toolbar_newMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address_newMain"
                android:layout_alignParentTop="true"
                android:text="Address"
                android:gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                />

            <LinearLayout
                android:layout_below="@id/address_newMain"
                android:id="@+id/layout_zoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="세계" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전국" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="시도" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="구군" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="면동" />


            </LinearLayout>


            <SeekBar
                android:layout_below="@+id/layout_zoom"
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="45dp" />


        </RelativeLayout>





    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressLay_newMain"
        android:id="@+id/fragment_writeInfo"
        android:layout_margin="10dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager_newMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_writeInfo"
        android:background="@color/gray_dim_soft"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

    </android.support.v4.view.ViewPager>

</RelativeLayout>